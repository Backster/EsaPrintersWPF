        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="197*"/>
            <ColumnDefinition Width="621*"/>
        </Grid.ColumnDefinitions>
        <ComboBox x:Name="printerList" HorizontalAlignment="Left" Margin="68,47,0,0" VerticalAlignment="Top" Width="151" SelectionChanged="printerList_SelectionChanged"/>
